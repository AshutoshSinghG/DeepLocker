# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration (Optional - for caching/logs)
MONGODB_URI=mongodb://localhost:27017/token-insight

# AI Service Configuration
# Choose one: HUGGINGFACE or OPENAI
AI_PROVIDER=HUGGINGFACE

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=tiiuae/falcon-7b-instruct

# OpenAI Configuration (Alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# External API Configuration
COINGECKO_API_KEY=your_coingecko_api_key_here

# HyperLiquid Configuration (if required)
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_API_KEY=your_hyperliquid_api_key_here

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
